<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.RecomendacionFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recomendacion del dia"
            android:textSize="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/comida"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txt_nombre_comida"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre_Comida"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_nombre_restaurante"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugar_Comida"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_precio"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio_Comida"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>

    </RelativeLayout>

</FrameLayout>