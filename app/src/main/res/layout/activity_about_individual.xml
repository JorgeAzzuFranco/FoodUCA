<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            tools:context=".AboutIndividualActivity">

                <ImageView
                    android:id="@+id/creators_img"
                    android:layout_width="@dimen/dp200"
                    android:layout_height="@dimen/dp200"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/comida"/>

                <TextView
                    android:id="@+id/txt_nombre_creador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#000"
                    android:textSize="32sp"
                    android:text="Nombre"/>

                <TextView
                    android:id="@+id/txt_carrera_creador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#333"
                    android:textSize="24sp"
                    android:text="Ingeniero Informatico"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="4dp"
                            app:srcCompat="@drawable/github" />

                        <TextView
                            android:id="@+id/txt_git_creador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="git"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/git"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                        <ImageView
                            android:id="@+id/img_git"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="4dp"
                            app:srcCompat="@drawable/gmail" />

                        <TextView
                            android:id="@+id/txt_email_creador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="mail"/>

                </LinearLayout>

        </LinearLayout>
</ScrollView>
