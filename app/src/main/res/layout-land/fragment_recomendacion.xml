<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.RecomendacionFragment">


    <TextView
        android:id="@+id/txtRecom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atrevete_a_probarlo"
        android:textSize="@dimen/sp30"
        android:layout_centerHorizontal="true"
        android:textColor="@color/negro"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRecom"
        android:layout_centerHorizontal="true">

        <ImageView
                android:id="@+id/recomen_comida_img"
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp200"
                android:src="@drawable/comida"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/dp8" />

            <TextView
                android:id="@+id/txt_nombre_comida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_comida"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="@dimen/sp20"
                android:layout_toRightOf="@+id/recomen_comida_img"
                android:layout_margin="@dimen/dp8"
                android:textColor="@color/negro"/>

            <TextView
                android:id="@+id/txt_nombre_restaurante"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lugar_comida"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_nombre_comida"
                android:layout_toRightOf="@+id/recomen_comida_img"
                android:layout_margin="@dimen/dp8"
                android:textSize="@dimen/sp20"
                android:textColor="@color/negro"/>

            <TextView
                android:id="@+id/txt_precio"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio_Comida"
                android:layout_below="@+id/txt_nombre_restaurante"
                android:layout_toRightOf="@+id/recomen_comida_img"
                android:layout_margin="@dimen/dp8"
                android:textSize="@dimen/sp20"
                android:textColor="@color/negro"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/bttn_refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:src="@drawable/refresh"/>

</RelativeLayout>