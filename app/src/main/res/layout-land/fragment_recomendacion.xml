<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.RecomendacionFragment">


    <TextView
        android:id="@+id/txtRecom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomendacion del dia"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRecom"
        android:layout_centerHorizontal="true">

        <ImageView
                android:id="@+id/recomen_comida_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/comida"
                android:scaleType="fitXY"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/txt_nombre_comida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre_Comida"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/recomen_comida_img"
                android:layout_margin="8dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/txt_nombre_restaurante"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar_Comida"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_nombre_comida"
                android:layout_toRightOf="@+id/recomen_comida_img"
                android:layout_margin="8dp"
                android:textSize="20dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/txt_precio"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio_Comida"
                android:layout_below="@+id/txt_nombre_restaurante"
                android:layout_toRightOf="@+id/recomen_comida_img"
                android:layout_margin="8dp"
                android:textSize="20dp"
                android:textColor="#000"/>

    </RelativeLayout>

</RelativeLayout>